                                                                            class="btn btn-sm btn-danger deleteAddressButton"
                                                                            data-address-id="<%= item._id %>"
                                                                            data-bs-toggle="modal"
                                                                            data-bs-target="#deleteConfirmationModal">
                                                                            Delete
