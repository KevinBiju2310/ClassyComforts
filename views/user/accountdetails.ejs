                                        title: 'Success',
                                        text: 'Password changed successfully',
                                        timer: 2000
                                    }).then(() => {
                                        document.getElementById("changePasswordForm").reset();
                                    });
                                })
                                .catch(error => {
                                    console.error('Error:', error);
                                });
                        }



