<%- include("../layouts/userHeader") %>

    <style>
        .detail-qty {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .qty-btn {
            background: none;
            border: none;
            cursor: pointer;
        }

        .qty-down {
            color: red;
            /* Change color for minus button */
        }

        .qty-up {
            color: green;
            /* Change color for plus button */
        }

        .qty-val {
            margin: 0 10px;
        }
    </style>
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="index.html" rel="nofollow">Home</a>
                    <span></span> Shop
                    <span></span> Your Cart
                </div>
            </div>
        </div>
        <section class="mt-50 mb-50">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <% if (cart.products && cart.products.length> 0) { %>
                                <table class="table shopping-summery text-center clean">
                                    <thead>
                                        <tr class="main-heading">
                                            <th scope="col">Select</th> <!-- Add a column for checkboxes -->
                                            <th scope="col">Image</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Quantity</th>
                                            <th scope="col">Subtotal</th>
                                            <th scope="col">Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% cart.products.forEach(product=> { %>
                                            <tr data-product-id="<%= product.productId._id %>">
                                                <td class="text-center" data-title="Select">
                                                    <input type="checkbox" class="checkbox-product"
                                                        data-product-id="<%= product.productId._id %>">
                                                </td>
                                                <td class="image product-thumbnail">
                                                    <img src="/uploads/<%= product.productId.productImages[0] %>"
                                                        alt="<%= product.productId.productname %>">
                                                </td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name"><a
                                                            href="/user/singleproduct/<%= product.productId._id %>">
                                                            <%= product.productId.productname %>
                                                        </a></h5>
                                                </td>
                                                <td class="price" data-title="Price"><span>$<%=
                                                            product.productId.price.toFixed(2) %></span></td>
                                                <td class="text-center" data-title="Stock">
                                                    <div
                                                        class="detail-qty border radius m-auto d-flex align-items-center">
                                                        <!-- Pass productId to updateQuantity function -->
                                                        <button class="qty-btn qty-down"
                                                            onclick="updateQuantity('<%= product.productId._id %>', -1)"><i
                                                                class="fi-rs-minus"></i>
                                                        </button>
                                                        <span id="quantity-<%= product.productId._id %>"
                                                            class="qty-val">
                                                            <%= product.quantity %>
                                                        </span>
                                                        <button class="qty-btn qty-up"
                                                            onclick="updateQuantity('<%= product.productId._id %>', 1)"><i
                                                                class="fi-rs-plus"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                                <td class="text-right" data-title="Subtotal">
                                                    <span id="subtotal-<%= product.productId._id %>">$<%=
                                                            (product.productId.price * product.quantity).toFixed(2) %>
                                                    </span>
                                                </td>
                                                <td class="action" data-title="Remove">
                                                    <button class="text-muted delete-item" data-bs-toggle="modal"
                                                        data-bs-target="#deleteConfirmationModal"
                                                        onclick="handleDeleteClick('<%= product.productId._id %>')">
                                                        <i class="fi-rs-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            <% }); %>
                                    </tbody>
                                </table>
                                <% } else { %>
                                    <div class="empty-cart-message">
                                        <p>Your cart is empty.</p>
                                    </div>
                                    <% } %>
                        </div>
                        <div class="cart-action text-end">
                            <a class="btn  mr-10 mb-sm-15" id="update-cart-btn"><i
                                    class="fi-rs-shuffle mr-10"></i>Update Cart</a>
                            <a class="btn "><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a>
                        </div>
                        <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div>
                        <div class="row mb-50">
                            <div class="col-lg-6 col-md-12">
                                <div class="mb-30 mt-50">
                                    <div class="heading_s1 mb-3">
                                        <h4>Apply Coupon</h4>
                                    </div>
                                    <div class="total-amount">
                                        <div class="left">
                                            <div class="coupon">
                                                <form action="#" target="_blank">
                                                    <div class="form-row row justify-content-center">
                                                        <div class="form-group col-lg-6">
                                                            <input class="font-medium" name="Coupon"
                                                                placeholder="Enter Your Coupon">
                                                        </div>
                                                        <div class="form-group col-lg-6">
                                                            <button class="btn  btn-sm"><i
                                                                    class="fi-rs-label mr-10"></i>Apply</button>
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-12">
                                <div class="border p-md-4 p-30 border-radius cart-totals">
                                    <div class="heading_s1 mb-3">
                                        <h4>Cart Totals</h4>
                                    </div>
                                    <div class="table-responsive">
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <td class="cart_total_label">Cart Subtotal</td>
                                                    <td class="cart_total_amount"><span
                                                            class="font-lg fw-900 text-brand"><span
                                                                id="cart-subtotal"></span></span></td>
                                                </tr>
                                                <tr>
                                                    <td class="cart_total_label">Shipping</td>
                                                    <td class="cart_total_amount"> <i class="ti-gift mr-5"></i> Free
                                                        Shipping</td>
                                                </tr>
                                                <tr>
                                                    <td class="cart_total_label">Total</td>
                                                    <td class="cart_total_amount"><strong><span
                                                                class="font-xl fw-900 text-brand"><span
                                                                    id="cart-total"></span></span></strong>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <a href="#" class="btn "> <i class="fi-rs-box-alt mr-10"></i> Proceed To
                                        CheckOut</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <%- include("../layouts/userFooter") %>

        <div id="deleteConfirmationModal" class="modal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to delete this item from your cart?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
                    </div>
                </div>
            </div>
        </div>

        <script>
            // Function to update quantity, subtotal, and total
            async function updateQuantity(productId, quantityChange) {
                try {
                    const response = await fetch('/user/update', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({
                            productId: productId,
                            quantityChange: quantityChange,
                            checkedProducts: getCheckedProducts() // Pass checked checkboxes IDs
                        })
                    });

                    if (!response.ok) {
                        throw new Error('Failed to update cart');
                    }

                    const responseData = await response.json();

                    // Update quantity and subtotal in the UI
                    const quantityElement = document.querySelector(`#quantity-${productId}`);
                    const subtotalElement = document.querySelector(`#subtotal-${productId}`);
                    const cartSubtotalElement = document.getElementById('cart-subtotal');
                    const cartTotalElement = document.getElementById('cart-total');

                    if (quantityElement && subtotalElement && cartSubtotalElement && cartTotalElement) {
                        quantityElement.textContent = responseData.quantity;
                        subtotalElement.textContent = `$${responseData.subtotal.toFixed(2)}`;

                        // Update cart subtotal and total
                        cartSubtotalElement.textContent = `$${responseData.cartSubtotal.toFixed(2)}`;
                        cartTotalElement.textContent = `$${responseData.cartTotal.toFixed(2)}`;
                    }
                } catch (error) {
                    console.error('Error updating cart:', error);
                }
            }

            // Function to get checked checkboxes IDs
            function getCheckedProducts() {
                const checkedProducts = [];
                const checkboxProducts = document.querySelectorAll('.checkbox-product:checked');
                checkboxProducts.forEach(checkbox => {
                    checkedProducts.push(checkbox.getAttribute('data-product-id'));
                });
                return checkedProducts;
            }

            let productIdToDelete = null;

            // Function to handle delete button click
            function handleDeleteClick(productId) {
                // Store productId of the item to be deleted
                productIdToDelete = productId;
            }

            // Function to handle confirmation modal's delete button click
            document.getElementById('confirmDeleteBtn').addEventListener('click', async () => {
                if (productIdToDelete) {
                    try {
                        const response = await fetch(`/user/${productIdToDelete}`, {
                            method: 'DELETE'
                        });

                        if (!response.ok) {
                            throw new Error('Failed to delete product from cart');
                        }

                        const rowToDelete = document.querySelector(`tr[data-product-id="${productIdToDelete}"]`);
                        if (rowToDelete) {
                            rowToDelete.remove();
                        }

                        const deleteConfirmationModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
                        deleteConfirmationModal.hide();
                        window.location.href = '/user/cart';

                    } catch (error) {
                        console.error('Error deleting product:', error);
                    }
                }
            });


        </script>